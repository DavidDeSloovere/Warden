@model Warden.Web.Core.Dto.UserDto
@addTagHelper "*, Microsoft.AspNet.Mvc.TagHelpers"

<div class="row card-panel">
    <div class="s12">
        <h4 class="custom-text">Settings</h4>
    </div>
    <div class="col s12">
        <div>
            <label>Email</label>
            <ul class="collection">
                <li class="collection-item">@Model.Email</li>
            </ul>
        </div>
        <div>
            <label>User id</label>
            <ul class="collection">
                <li class="collection-item">@Model.Id</li>
            </ul>
        </div>
        <div>
            <label>Role</label>
            <ul class="collection">
                <li class="collection-item">@Model.Role</li>
            </ul>
        </div>
        <div>
            <a href="@Url.Action("Password")" class="btn waves-effect custom">Change password</a>
        </div>
    </div>
</div>
<div class="row card-panel">
    <div class="col s12">
        <h5 class="custom-text">API keys (@Model.ApiKeys.Count())</h5>
        <form asp-controller="Settings" asp-action="CreateApiKey" asp-anti-forgery="true" method="POST">
            <button class="btn waves-effect waves-light custom" type="submit" name="action">New API key</button>
        </form>
        <ul class="collection">
            @foreach (var apiKey in Model.ApiKeys)
            {
                <li class="collection-item custom-text">
                    <div class="row">
                        <div class="col s12 m11 l11">
                            @apiKey
                        </div>
                        <div class="col s12 m1 l1">
                            <a class="btn-floating waves-effect waves-light red lighten-1 modal-trigger" data-api-key="@apiKey" href="#modal-delete" data-remove-api-key title="Remove API key" type="submit"><i class="material-icons dp48 right">delete</i></a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
@Html.Partial("_DeletPasswordModal")

@model Warden.Web.ViewModels.RegisterViewModel

<div class="row">
    <div class="col s12 m8 l6 offset-m2 offset-l3">
        <div class="row card-panel">
            <h5 class="center-align custom-text">Sign up</h5>
            <form asp-controller="Account" asp-action="Register" method="POST">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="input-field col s12">
                        <input type="email" class="validate" name="Email" asp-for="Email" />
                        <label asp-for="Email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="password" class="validate" name="Password" asp-for="Password"/>
                        <label asp-for="Password">Password</label>
                    </div>
                    <div class="input-field col s12">
                        <input type="password" class="validate" name="ConfirmPassword" asp-for="ConfirmPassword" />
                        <label asp-for="Password">Confirm password</label>
                    </div>
                    <div class="divider"></div>
                    <div class="row">
                        <div class="col s12">
                            <div class="section">
                                <button class="btn waves-effect waves-light custom right" type="submit" name="action">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
